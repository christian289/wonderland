<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        에디터 RadioButton 스타일
        Editor RadioButton style
    -->
    <Style x:Key="EditorRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource EditorTextBrush}" />
        <Setter Property="Margin" Value="0,0,10,0" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <StackPanel Orientation="Horizontal">
                        <Grid
                            Width="16"
                            Height="16"
                            Margin="0,0,5,0">
                            <Ellipse
                                x:Name="OuterCircle"
                                Fill="Transparent"
                                Stroke="#FF808080"
                                StrokeThickness="1" />
                            <Ellipse
                                x:Name="InnerCircle"
                                Width="8"
                                Height="8"
                                Fill="#FF00BFFF"
                                Visibility="Collapsed" />
                        </Grid>
                        <ContentPresenter VerticalAlignment="Center" />
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="InnerCircle" Property="Visibility" Value="Visible" />
                            <Setter TargetName="OuterCircle" Property="Stroke" Value="#FF00BFFF" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterCircle" Property="Stroke" Value="#FFA0A0A0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--
        에디터 Separator 스타일
        Editor Separator style
    -->
    <Style x:Key="EditorSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{DynamicResource EditorSeparatorBrush}" />
        <Setter Property="Margin" Value="0,5" />
    </Style>

    <!--
        에디터 ScrollViewer 스타일
        Editor ScrollViewer style
    -->
    <Style x:Key="EditorScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
    </Style>

    <!--
        에디터 콘텐츠 StackPanel 스타일
        Editor content StackPanel style
    -->
    <Style x:Key="EditorContentStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="10" />
    </Style>

    <!--
        버튼 그룹 StackPanel 스타일
        Button group StackPanel style
    -->
    <Style x:Key="EditorButtonGroupStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <!--
        라디오 버튼 그룹 StackPanel 스타일
        Radio button group StackPanel style
    -->
    <Style x:Key="EditorRadioGroupStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

</ResourceDictionary>
