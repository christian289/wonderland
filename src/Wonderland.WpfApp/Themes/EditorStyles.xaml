<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        에디터 스타일 허브 (MergedDictionaries)
        Editor styles hub (MergedDictionaries)
        
        주의: 색상 리소스(EditorColors.xaml)가 먼저 로드되어야 합니다.
        Note: Color resources (EditorColors.xaml) must be loaded first.
    -->

    <ResourceDictionary.MergedDictionaries>
        <!--  색상 리소스 (다른 스타일에서 참조되므로 가장 먼저 로드)  -->
        <!--  Color resources (loaded first as referenced by other styles)  -->
        <ResourceDictionary Source="Editor/EditorColors.xaml" />

        <!--  텍스트 및 패널 스타일  -->
        <!--  Text and panel styles  -->
        <ResourceDictionary Source="Editor/EditorTextStyles.xaml" />

        <!--  버튼 스타일  -->
        <!--  Button styles  -->
        <ResourceDictionary Source="Editor/EditorButtonStyles.xaml" />

        <!--  ListBox 스타일  -->
        <!--  ListBox styles  -->
        <ResourceDictionary Source="Editor/EditorListBoxStyles.xaml" />

        <!--  RadioButton, Separator, ScrollViewer, StackPanel 스타일  -->
        <!--  RadioButton, Separator, ScrollViewer, StackPanel styles  -->
        <ResourceDictionary Source="Editor/EditorMiscStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
