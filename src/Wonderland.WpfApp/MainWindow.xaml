<Window x:Class="Wonderland.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Wonderland.UI.Controls;assembly=Wonderland.UI"
        mc:Ignorable="d"
        Title="Wonderland"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        Width="300"
        Height="600"
        MinWidth="200"
        MinHeight="300"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- 콘텐츠 영역 -->
            <!-- Content area -->
            <ColumnDefinition Width="*" />
            <!-- 에디터 패널 (우측 확장) -->
            <!-- Editor panel (right side expansion) -->
            <ColumnDefinition x:Name="EditorColumn" Width="0" />
        </Grid.ColumnDefinitions>

        <!-- 콘텐츠 영역 (Parallax + Particle + Selection) -->
        <!-- Content area (Parallax + Particle + Selection) -->
        <Grid x:Name="ContentGrid" Grid.Column="0">
            <!-- Parallax 레이어 캔버스 -->
            <!-- Parallax layer canvas -->
            <controls:ParallaxCanvas x:Name="ParallaxCanvas" />

            <!-- 파티클 캔버스 -->
            <!-- Particle canvas -->
            <controls:ParticleCanvas x:Name="ParticleCanvas" />

            <!-- 선택 오버레이 캔버스 (Edit 모드에서 이미지 조작용) -->
            <!-- Selection overlay canvas (for image manipulation in Edit mode) -->
            <!-- Canvas는 부모 크기를 자동으로 채우지 않으므로 코드에서 크기 설정 필요 -->
            <!-- Canvas doesn't auto-fill parent size, so size must be set in code -->
            <Canvas x:Name="SelectionOverlay"
                    Visibility="Collapsed"
                    Background="Transparent"
                    ClipToBounds="False" />

            <!-- 드래그 영역 (Edit 모드에서만 표시) -->
            <!-- Drag area (only visible in Edit mode) -->
            <Border x:Name="DragArea"
                    Background="#60000000"
                    Height="24"
                    VerticalAlignment="Top"
                    Cursor="SizeAll"
                    Visibility="Collapsed">
                <TextBlock Text="☰ Drag to move"
                           Foreground="#A0FFFFFF"
                           FontSize="10"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- 에디터 패널 (우측) -->
        <!-- Editor panel (right side) -->
        <Border x:Name="EditorPanel"
                Grid.Column="1"
                Background="#F0202020"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 헤더 -->
                <!-- Header -->
                <Border Grid.Row="0"
                        Background="#FF303030"
                        Padding="10,8">
                    <TextBlock Text="Editor"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="White"/>
                </Border>

                <!-- 스크롤 가능한 콘텐츠 -->
                <!-- Scrollable content -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="10">
                        <!-- 배경 설정 (Z-Index 0, 단일) -->
                        <!-- Background settings (Z-Index 0, single) -->
                        <TextBlock Text="Background (Z:0)"
                                   FontWeight="SemiBold"
                                   Foreground="#FFD700"
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Button x:Name="SetBackgroundButton"
                                    Content="Set"
                                    Padding="8,4"
                                    Width="60"
                                    Margin="0,0,5,0"/>
                            <Button x:Name="RemoveBackgroundButton"
                                    Content="Remove"
                                    Padding="8,4"
                                    Width="60"/>
                        </StackPanel>
                        <TextBlock x:Name="BackgroundPathText"
                                   Text="(None)"
                                   Foreground="#80FFFFFF"
                                   FontSize="10"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="0,0,0,10"/>

                        <Separator Margin="0,5" Background="#40FFFFFF"/>

                        <!-- 전경 레이어 (Z-Index 1~10) -->
                        <!-- Foreground layers (Z-Index 1~10) -->
                        <TextBlock Text="Layers (Drag to reorder)"
                                   FontWeight="SemiBold"
                                   Foreground="#00BFFF"
                                   FontSize="12"
                                   Margin="0,10,0,5"/>
                        <Button x:Name="AddLayerButton"
                                Content="+ Add Layer"
                                Padding="8,4"
                                Margin="0,0,0,5"/>
                        <ListBox x:Name="LayerListBox"
                                 MaxHeight="150"
                                 Background="#20FFFFFF"
                                 BorderThickness="0"
                                 Foreground="White"
                                 AllowDrop="True"
                                 Margin="0,0,0,10">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="8,4"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="AllowDrop" Value="True"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <Separator Margin="0,5" Background="#40FFFFFF"/>

                        <!-- 파티클 프리셋 (단일) -->
                        <!-- Particle preset (single) -->
                        <TextBlock Text="Particle Preset"
                                   FontWeight="SemiBold"
                                   Foreground="#FF69B4"
                                   FontSize="12"
                                   Margin="0,10,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <RadioButton x:Name="PresetNoneRadio"
                                         Content="None"
                                         Foreground="White"
                                         Margin="0,0,10,0"
                                         GroupName="Preset"
                                         IsChecked="True"/>
                            <RadioButton x:Name="PresetSnowRadio"
                                         Content="Snow"
                                         Foreground="White"
                                         Margin="0,0,10,0"
                                         GroupName="Preset"/>
                            <RadioButton x:Name="PresetRainRadio"
                                         Content="Rain"
                                         Foreground="White"
                                         GroupName="Preset"/>
                        </StackPanel>
                        <TextBlock x:Name="PresetZIndexText"
                                   Text="Z-Index: 11"
                                   Foreground="#80FFFFFF"
                                   FontSize="10"
                                   Margin="0,5,0,10"/>

                        <Separator Margin="0,5" Background="#40FFFFFF"/>

                        <!-- 모드 정보 -->
                        <!-- Mode info -->
                        <TextBlock Text="F12: Toggle Edit mode&#x0a;ESC: Exit Edit mode&#x0a;Click image to select&#x0a;Drag to move/resize"
                                   Foreground="#60FFFFFF"
                                   FontSize="10"
                                   TextWrapping="Wrap"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
