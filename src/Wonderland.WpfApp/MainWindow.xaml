<Window x:Class="Wonderland.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Wonderland.UI.Controls;assembly=Wonderland.UI"
        mc:Ignorable="d"
        Title="Wonderland"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        Width="300"
        Height="600"
        MinWidth="200"
        MinHeight="300"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- 콘텐츠 영역 -->
            <ColumnDefinition Width="*" />
            <!-- 에디터 패널 (우측 확장) -->
            <ColumnDefinition x:Name="EditorColumn" Width="0" />
        </Grid.ColumnDefinitions>

        <!-- 콘텐츠 영역 (Parallax + Particle + Selection) -->
        <Grid x:Name="ContentGrid" Grid.Column="0">
            <!-- Parallax 레이어 캔버스 -->
            <controls:ParallaxCanvas x:Name="ParallaxCanvas" />

            <!-- 파티클 캔버스 -->
            <controls:ParticleCanvas x:Name="ParticleCanvas" IsHitTestVisible="False" />

            <!-- 선택 오버레이 캔버스 (Edit 모드에서 이미지 조작용) -->
            <Canvas x:Name="SelectionOverlay"
                    Visibility="Collapsed"
                    Background="Transparent"
                    ClipToBounds="False" />

            <!-- 드래그 영역 (Edit 모드에서만 표시) -->
            <Border x:Name="DragArea"
                    Style="{StaticResource DragAreaStyle}"
                    Visibility="Collapsed">
                <TextBlock Text="☰ Drag to move"
                           Style="{StaticResource DragAreaTextStyle}"/>
            </Border>
        </Grid>

        <!-- 에디터 패널 (우측) -->
        <Border x:Name="EditorPanel"
                Grid.Column="1"
                Style="{StaticResource EditorPanelStyle}"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 헤더 -->
                <Border Grid.Row="0" Style="{StaticResource EditorHeaderStyle}">
                    <TextBlock Text="Editor" Style="{StaticResource EditorHeaderTextStyle}"/>
                </Border>

                <!-- 스크롤 가능한 콘텐츠 -->
                <ScrollViewer Grid.Row="1" Style="{StaticResource EditorScrollViewerStyle}">
                    <StackPanel Style="{StaticResource EditorContentStyle}">

                        <!-- 배경 설정 (Z-Index 0, 단일) -->
                        <TextBlock Text="Background (Z:0)"
                                   Style="{StaticResource EditorBackgroundTitleStyle}"/>
                        <StackPanel Style="{StaticResource EditorButtonGroupStyle}">
                            <Button x:Name="SetBackgroundButton"
                                    Content="Set"
                                    Style="{StaticResource EditorButtonStyle}"
                                    Width="60"
                                    Margin="0,0,5,0"/>
                            <Button x:Name="RemoveBackgroundButton"
                                    Content="Remove"
                                    Style="{StaticResource EditorButtonStyle}"
                                    Width="60"/>
                        </StackPanel>
                        <TextBlock x:Name="BackgroundPathText"
                                   Text="(None)"
                                   Style="{StaticResource EditorPathTextStyle}"/>

                        <Separator Style="{StaticResource EditorSeparatorStyle}"/>

                        <!-- 전경 레이어 (Z-Index 1~10) -->
                        <TextBlock Text="Layers (Drag to reorder)"
                                   Style="{StaticResource EditorLayerTitleStyle}"/>
                        <Button x:Name="AddLayerButton"
                                Content="+ Add Layer"
                                Style="{StaticResource EditorFullWidthButtonStyle}"/>
                        <ListBox x:Name="LayerListBox"
                                 Style="{StaticResource EditorListBoxStyle}"
                                 ItemContainerStyle="{StaticResource EditorListBoxItemStyle}"/>

                        <Separator Style="{StaticResource EditorSeparatorStyle}"/>

                        <!-- 파티클 프리셋 (단일) -->
                        <TextBlock Text="Particle Preset"
                                   Style="{StaticResource EditorParticleTitleStyle}"/>
                        <StackPanel Style="{StaticResource EditorRadioGroupStyle}">
                            <RadioButton x:Name="PresetNoneRadio"
                                         Content="None"
                                         Style="{StaticResource EditorRadioButtonStyle}"
                                         GroupName="Preset"
                                         IsChecked="True"/>
                            <RadioButton x:Name="PresetSnowRadio"
                                         Content="Snow"
                                         Style="{StaticResource EditorRadioButtonStyle}"
                                         GroupName="Preset"/>
                            <RadioButton x:Name="PresetRainRadio"
                                         Content="Rain"
                                         Style="{StaticResource EditorRadioButtonStyle}"
                                         Margin="0"
                                         GroupName="Preset"/>
                        </StackPanel>
                        <TextBlock x:Name="PresetZIndexText"
                                   Text="Z-Index: 11"
                                   Style="{StaticResource EditorZIndexTextStyle}"/>

                        <Separator Style="{StaticResource EditorSeparatorStyle}"/>

                        <!-- 모드 정보 -->
                        <TextBlock Text="F12: Toggle Edit mode&#x0a;ESC: Exit Edit mode&#x0a;Ctrl+Z: Undo&#x0a;Delete: Remove layer&#x0a;Click image to select&#x0a;Drag to move/resize"
                                   Style="{StaticResource EditorInfoTextStyle}"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
