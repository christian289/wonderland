<Application x:Class="Wonderland.WpfApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Wonderland.UI 스타일 -->
                <ResourceDictionary Source="/Wonderland.UI;component/Themes/Generic.xaml"/>
                <!-- ViewModel-View 매핑 -->
                <ResourceDictionary Source="Resources/Mappings.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
